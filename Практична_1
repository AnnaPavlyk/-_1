#include <stdio.h>

int main() {
    double t1, t2, t3;
    
    printf("Введіть три значення: ");    // Отримання вхідних даних
    scanf("%lf %lf %lf", &t1, &t2, &t3);
    
    double v1 = 1.0 / t1;     // Обчислення швидкості кожного гостя
    double v2 = 1.0 / t2;
    double v3 = 1.0 / t3;
    
    double v_total = v1 + v2 + v3;    // Обчислення загальної швидкості

    double t_total = 1.0 / v_total;    // Обчислення загального часу
    
    printf("Час, необхідний для з'їдання пирога: %.2f годин\n", t_total);     // Виведення результату з округленням до двох знаків після коми
    
    return 0;
}
